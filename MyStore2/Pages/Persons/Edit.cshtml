@page
@model MyStore2.Pages.Persons.EditModel
@{
}

<br />
<h2>Edit Person</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
    </div>
}
<form method="POST">

    <div class="row mb-3" style="visibility:hidden">
        <label class="col-sm-3 col-form-label">User ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="userid" value="@Model.personInfo.userid">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">First Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="firstName" value="@Model.personInfo.firstName">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Last Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lastName" value="@Model.personInfo.lastName">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.personInfo.address">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>

        </div>
    }


    <div class="row mb-3">
        <div class="offset-sm-3" col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-outline-primary" href="/persons" role="button">Cancel</a>
        </div>
        @*<div class="col-sm-3" d-grid>
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>*@
    </div>

</form>